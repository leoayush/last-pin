<!DOCTYPE html>
<html>

<head>
  <%- include ../partials/head.ejs %>
</head>


<body>
  <header>
    <%- include ../partials/header.ejs %>
  </header>
  
  <div class="container">
    <div class="panel panel-default">
      <div class="panel-heading">Edit <i class="fa fa-thumb-tack"></i></div>
      <div class="panel-body">
        <form name="updateboard" method="post" action="/boards/<%= board.id %>/edit" enctype='application/x-www-form-urlencoded'>
          <input type="text" name="boardName" placeholder="Name" class="form-control" value="<%= board.boardName %>">
          <input type="text" name="boardDescription" placeholder="Description" class="form-control" value="<%= board.boardDescription %>">
          <button type="submit" class="btn btn-info btn-lg form-control">Update</button>
        </form>
      </div>
    </div>
  </div>
  
  
  
  
</body>

</html>