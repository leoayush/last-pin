<!DOCTYPE html>
<html>

<head>
  <%- include ../partials/head.ejs %>
</head>


<body>
  <header>
    <%- include ../partials/header.ejs %>
  </header>
  
  <div class="container">
    <div class="panel panel-default">
      <div class="panel-heading">Edit <i class="fa fa-thumb-tack"></i></div>
      <div class="panel-body">
        <form name="updatepin" method="post" action="/pins/<%= pin.id %>/edit" enctype='application/x-www-form-urlencoded'>
          <input type="text" name="title" placeholder="Title" class="form-control" value="<%= pin.title %>">
          <input type="text" name="image" placeholder="Image URL" class="form-control" value="<%= pin.image %>">
          <input type="text" name="source" placeholder="Source" class="form-control" value="<%= pin.source %>">
          <textarea name="description" placeholder="Description" class="form-control" value="<%= pin.description %>"></textarea>
          <button type="submit" class="btn btn-info btn-lg">Update</button>
        </form>
      </div>
    </div>
  </div>
  
  
  
  
</body>

</html>